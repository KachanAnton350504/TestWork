<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Status</th>
      <th>Vendor code</th>
      <th>Weight</th>
      <th>Price</th>
      <th>Series</th>
      <th>Subjects</th>
      <th>Limit age</th>
      <th>Time status</th>
      <th>Description product</th>
      <th>Description book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.image %></td>
        <td><%= book.status %></td>
        <td><%= book.vendor_code %></td>
        <td><%= book.weight %></td>
        <td><%= book.price %></td>
        <td><%= book.series %></td>
        <td><%= book.subjects %></td>
        <td><%= book.limit_age %></td>
        <td><%= book.time_status %></td>
        <td><%= book.description_product %></td>
        <td><%= book.description_book %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

